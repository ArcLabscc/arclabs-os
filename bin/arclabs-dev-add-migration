#!/bin/bash

# Creates a new ArcLabs migration named after the unix timestamp of the last commit.
# Only intended for ArcLabs developers.

cd ~/.local/share/arclabs-os
migration_file="$HOME/.local/share/arclabs-os/migrations/$(git log -1 --format=%cd --date=unix).sh"
touch $migration_file

if [[ "$1" != "--no-edit" ]]; then
  nvim $migration_file
fi

echo $migration_file
