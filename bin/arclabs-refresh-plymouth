#!/bin/bash

# Overwrite the user config for the Plymouth drive decryption and boot sequence with the ArcLabs default and rebuild it.

sudo cp ~/.local/share/arclabs-os/default/plymouth/* /usr/share/plymouth/themes/arclabs-os/
sudo plymouth-set-default-theme arclabs

if command -v limine-mkinitcpio &>/dev/null; then
  sudo limine-mkinitcpio
else
  sudo mkinitcpio -P
fi
