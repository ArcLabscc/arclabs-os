#!/bin/bash

# Overwrite the package configuration for /etc/pacman with the ArcLabs default of using its dedicated mirrors and repositories, then update all packages.
# This is used after switching between ArcLabs release channels to ensure the right packages for the right channel are available.

# Take backup of existing files
sudo cp -f /etc/pacman.conf /etc/pacman.conf.bak
sudo cp -f /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.bak

if [[ $1 == "edge" ]]; then
  sudo cp -f ~/.local/share/arclabs-os/default/pacman/pacman-edge.conf /etc/pacman.conf
  sudo cp -f ~/.local/share/arclabs-os/default/pacman/mirrorlist-edge /etc/pacman.d/mirrorlist
  echo "Setting channel to edge"
else
  sudo cp -f ~/.local/share/arclabs-os/default/pacman/pacman-stable.conf /etc/pacman.conf
  sudo cp -f ~/.local/share/arclabs-os/default/pacman/mirrorlist-stable /etc/pacman.d/mirrorlist
  echo "Setting channel to stable"
fi

echo

# Reset all package DBs and then update
sudo pacman -Syyu --noconfirm
