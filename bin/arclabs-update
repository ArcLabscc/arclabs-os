#!/bin/bash

set -e

trap 'echo ""; echo -e "\033[0;31mSomething went wrong during the update!\n\nPlease review the output above carefully, correct the error, and retry the update.\n\nIf you need assistance, get help from the community at https://arclabs.cc/discord\033[0m"' ERR

if [[ $1 == "-y" ]] || arclabs-update-confirm; then
  arclabs-snapshot create || [ $? -eq 127 ]
  arclabs-update-git
  arclabs-update-perform
fi
